{
    "name": "Youtube Annotations",
    "description": "Annotations for youtube videos.",
    "version": "1.1",
    "manifest_version": 3,
    "permissions": ["webNavigation", "storage", "scripting", "activeTab"],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://www.youtube.com/watch*",
        "https://*/*",
        "http://*/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "./extension-chrome-removebg.png"
        }
    },
    "icons": {
        "128": "./extension-chrome-removebg.png"
    }
}